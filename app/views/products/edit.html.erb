<div class="container text-center edit-container">
  <h1 style="margin-bottom:35px">Edit product</h1>

  <%= form_for @product do |f| %>
    <%= f.label 'product name' %><br>
    <%= f.text_field :name ,class:"edit-input"%><br>

    <%= f.label 'product price' %><br>
    <%= f.text_field :price ,class:"edit-input" %><br>

    <%= f.label 'product description' %><br>
    <%= f.text_area :description ,class:"edit-input"%><br>

    <div>
      <%= f.file_field :photo , style:"margin-left:100px;margin-bottom:15px;"%>
      <%= f.hidden_field :photo_cache %>
    </div>
    <%= f.submit "Submit update", style:"color:white;margin-top:30px;background:rgb(0, 115, 188);border:none;padding-left:25px;padding-right:25px;padding-top:10px;padding-bottom:10px" %>
  <% end %>
</div>
