<h1>
  <%= @chat.name %>
</h1>

<div class="row">
  <div class="col-12 col-md-3">
    <h2>maybe some partial</h2>
  </div>

  <div class="col">
    <div class="chat">
      <% @chat_messages.each do |chat_message| %>
      <% if chat_message.user_id == current_user.id %>
        <h3>me: "<%=chat_message.content%>"</h3>
      <% else %>
        <h3><%=chat_message.user.name%>: "<%= chat_message.content %>"</h3>
      <%end %>
       <p><%=time_ago_in_words(chat_message.created_at)%></p>
      <% end %>
    </div>

    <%= form_for Message.new, :html => {:class => 'press'} do |f| %>
      <div class="input-group mb-3">
        <%= f.label "new message" %>
        <%= f.text_field :content,class: 'chat-input'%>
        <div class="input-group-append">
          <%= f.submit "Send", class: 'btn btn-primary chat-input' %>
        </div>
      </div>

      <%= f.hidden_field :chat_id,:value => @chat.id %>
    <% end %>
  </div>
</div>
